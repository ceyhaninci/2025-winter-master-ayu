# Copy to .env and adjust as needed.

# Prisma uses this for DB connection
DATABASE_URL="mysql://root:root_password@mysql:3306/appdb"

# 32+ chars recommended (JWT signing)
AUTH_SECRET="change-me-to-a-long-random-string"

# Cookie name (optional)
AUTH_COOKIE_NAME="session"

# --- Thesis toggles (optional) ---
# Data layer: "prisma" (ORM) or "raw" (mysql2 parameterized queries)
DATA_ACCESS="raw"

# Security controls (default: on)
SECURITY_VALIDATION="off"
SECURITY_RATE_LIMIT="off"
SECURITY_ERROR_MASKING="off"
